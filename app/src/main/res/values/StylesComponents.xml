<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_Top_Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="fontFamily">@font/sansita</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/Red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="style_Explanation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="fontFamily">@font/sansita</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="style_Checks">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">140dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="fontFamily">@font/sansita</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="style_Prices">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">140dp</item>
        <item name="android:background">@color/Yellow</item>
        <item name="fontFamily">@font/sansita</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/Red</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="style_Follows">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="fontFamily">@font/sansita</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_Images">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


    <style name="style_Headers">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/Soft_Yellow</item>
        <item name="fontFamily">@font/sansita</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Red</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="style_Observations">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="fontFamily">@font/sansita</item>
        <item name="android:textColor">@color/Orange</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_Box_Observations">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="fontFamily">@font/sansita</item>
        <item name="android:gravity">top|start</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/Gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="style_Total_Price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/sansita</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_Label_Total">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/sansita</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_Buttom_Calculate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/sansita</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:backgroundTint">@color/Orange</item>
    </style>

    <style name="style_Buttom_Order">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/sansita</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:backgroundTint">@color/Green</item>
    </style>

    <style name="style_Lines">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/Gray</item>
    </style>


</resources>